@model Ecetera.AppDynamics.ViewModels.PaymentData
@{
    ViewBag.Title = "Refund";
}

<h2>Refund payment</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)

    <table>
        <tr>
            <td>Film title</td>
            <td>@Html.DisplayFor(model => model.FilmTitle)</td>
            @Html.HiddenFor(model => model.FilmTitle)               
         </tr>
         <tr>
                <td>Payment date</td>
                <td>@Html.DisplayFor(model => model.PaymentDate)</td>
             @Html.HiddenFor(model => model.PaymentDate)
         </tr>
         <tr>
            <td>Amount</td>
            <td>@Html.DisplayFor(model => model.Amount)</td>
             @Html.HiddenFor(model => model.Amount)
             @Html.HiddenFor(model => model.customerID)
             @Html.HiddenFor(model => model.rentalID)
             @Html.HiddenFor(model => model.staffID)
         </tr>
    </table>
    <p>
        <input type="submit" value="Refund" />
    </p>
}