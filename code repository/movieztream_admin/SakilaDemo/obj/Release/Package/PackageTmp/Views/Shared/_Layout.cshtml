<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>
<body>
    <div class="page">
       <div id="header">
           <div>
           <img alt="" src="../../Content/themes/base/images/appdlogo.png" />
           </div>
           <div id="ecetera">
             <img alt="" src="../../Content/themes/base/images/eceteralogo.jpg" />
            </div>
           <div></div>
            <div id="title">
                <h1>Sakila Demo App</h1>
            </div>

            <div id="logindisplay">
                @Html.Partial("_LogOnPartial")
            </div>
            @if(Request.IsAuthenticated) 
            {            
                <div id="menucontainer">
                    <ul id="menu">
                        <li>@Html.ActionLink("Home", "Index", "Home")</li>                        
                        <li>@Html.ActionLink("Customers", "Index", "Customer")</li>
                        <li>@Html.ActionLink("Sales", "Index", "Sales")</li>
                        <li>@Html.ActionLink("Rewards", "Index", "Reward")</li>                        
                    </ul>
                </div>
            }
        </div>
        <div id="main">
            @RenderBody()
        </div>
        <div id="footer">        
        </div>
        
    </div>
    
</body>
</html>